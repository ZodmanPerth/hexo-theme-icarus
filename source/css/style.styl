@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
    margin: 0
    padding: 0
    &::-moz-focus-inner
        border: 0
        padding: 0

html, body, #container
    height: 100%

body
    color: color-default
    background: color-background
    font: font-size font-sans
    -webkit-text-size-adjust: 100%

a
    color: color-link
    text-decoration: none
    &:visited
        color: color-link

code
    margin: 0 2px
    color: #e96900
    padding: 3px 5px
    font-size: 0.9em
    border-radius: 2px
    font-family: font-mono
    background-color: #f8f8f8

admon-color($color) {
  color: darken($color, 35%);
  background-color: lighten($color, 80%);
  border-color: $color;
}

admon-color-light($color) {
    color: darken($color, 35%);
    background-color: lighten($color, 95%);
    border-color: $color;
}

admon-title-color($color) {
    background-color: $color;
    color: lighten($color, 80%); //#eef1f4;
}

admon-title-light($color) {
        margin: 0;
        line-height: 1.8em;
        padding: 0 6px;
        border: 1px solid $color;
        color: darken($color, 35%);
        background-color: transparent;
}

.admonition {
  padding: 1em 1.2em;
  margin: 0 0 1.8em 0;
  border: 1px solid transparent;
  border-radius: 4px;
  text-align: left;
  &-title {
    float: left;
    margin: 0 .6em 0 0 !important;
    padding: 1px 6px;
    border-radius: 8px;
    font-size: 12px;
    font-weight: bold;
    text-align: left;
    text-transform: uppercase;
    line-height: 1.8em !important;
  }
  & p:not(admonition-title) {
      margin: 0;
      line-height: 1.8em;
  }
  &.note {
    admon-color(color-admonition-note);
    > .admonition-title {
        admon-title-color(color-admonition-note);
    }
  }
  &.aside {
    admon-color(color-admonition-aside);
    > .admonition-title {
        admon-title-color(color-admonition-aside);
    }
  }
  &.info,
  &.tips {
      admon-color-light(color-admonition-info);
    > .admonition-title {
        admon-title-light(color-admonition-info);
    }
  }
  &.warning {
    admon-color(color-admonition-warning);
    > .admonition-title {
        admon-title-color(color-admonition-warning);
    }
  }
  &.error,
  &.critical {
    admon-color(color-admonition-error);
    > .admonition-title {
        admon-title-color(color-admonition-error);
    }
  }
  &.question {
    admon-color(color-admonition-question);
    > .admonition-title {
        admon-title-color(color-admonition-question);
    }
  }
}

figure.highlight {
    max-height: 30em;
}

p a img {
    max-height: 30em;
}

.outer
    clearfix()
    max-width: (column-width + gutter-width) * columns + gutter-width
    margin: 0 auto
    padding: 0 gutter-width
    @media mq-mini
        padding: 0

.left, .alignleft
    float: left

.right, .alignright
    float: right

.clear
    clear: both

.logo
    width: logo-width
    height: logo-height
    background-repeat: no-repeat
    background-image: url(logo-url)
    background-size: logo-width logo-height

#container
    position: relative
    & > .outer
        margin-bottom: 30px

#main
    @media mq-normal
        column(main-column)
    @media mq-tablet
        if sidebar
            column(main-column-tablet)
        else
            width: 100%
    @media mq-mobile
        width: 100%
    @media mq-mini
        width: 100%

