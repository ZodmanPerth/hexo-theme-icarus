/* ---------------------------------
 *              Card
 * --------------------------------- */
.card
    overflow: visible
    border-radius: $card-radius

    & + .card, & + .column-right-shadow
        margin-top: 1.5rem

    .card-image
        overflow: hidden
        border-top-left-radius: $card-radius
        border-top-right-radius: $card-radius

    .media + .media
        border: none
        margin-top: 0
    
    .is-location
        margin: 2px 0px 0px 0px
        color: #a7aac0

    .link-button
        font-size: 1.3rem
        padding: 0 0.5em 0 0.5em;
